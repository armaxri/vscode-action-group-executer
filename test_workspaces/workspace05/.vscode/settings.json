{
    "actionGroupExecuter.actionGroups": [
        {
            "name": "Example1 - ls -la ${env:HOME}",
            "processes": [{
                "command": {
                    "call": [
                        "ls",
                        "-la",
                        "${env:HOME}"
                    ],
                    "processEndMessage": "\nNothing more!"
                }
            }]
        },
        {
            "name": "Example2 - count to 60",
            "processes": [
                {
                    "command": {
                        "call": [
                            "${workspaceFolder}/testCnt.sh",
                            "60",
                            "A"
                        ]
                    }
                }
            ]
        },
        {
            "name": "Example3 - two sequential counts to 20",
            "processes": [
                {
                    "commands": [
                        {
                           "call": [
                               "${workspaceFolder}/testCnt.sh",
                               "20",
                               "A"
                           ]
                       },
                       {
                          "call": [
                              "${workspaceFolder}/testCnt.sh",
                              "20",
                              "B"
                          ]
                      }
                    ]
                }
            ]
        },
        {
            "name": "Example4 - two parallel counts to 20",
            "processes": [
                {
                    "command": {
                        "call": [
                            "${workspaceFolder}/testCnt.sh",
                            "20",
                            "A"
                        ]
                    }
                },
                {
                    "command": {
                        "call": [
                            "${workspaceFolder}/testCnt.sh",
                            "20",
                            "B"
                        ]
                    }
                }
            ]
        },
        {
            "name": "Example5 - two parallel counts to 60",
            "processes": [
                {
                    "command": {
                        "call": [
                            "${workspaceFolder}/testCnt.sh",
                            "60",
                            "A"
                        ]
                    }
                },
                {
                    "command": {
                        "call": [
                            "${workspaceFolder}/testCnt.sh",
                            "60",
                            "B"
                        ]
                    }
                }
            ]
        },
        {
            "name": "Example6 - ls -la ${workspaceFolder}",
            "processes": [{
                "command": {
                    "call": [
                        "ls",
                        "-la",
                        "${workspaceFolder}"
                    ],
                    "hideProcessEndMessage": true
                }
            }]
        },
        {
            "name": "Example7 - run echoTEST_WORLD.sh with \"Hello World.\"",
            "processes": [{
                "command": {
                    "call": [
                        "${workspaceFolder}/echoTEST_WORLD.sh"
                    ],
                    "extendedOptions": {
                        "env": {
                            "TEST_WORLD": "Hello World."
                        }
                    }
                }
            }]
        },
        {
            "name": "Example8 - ls -la cwd",
            "processes": [{
                "command": {
                    "call": [
                        "ls",
                        "-la"
                    ],
                    "extendedOptions": {
                        "cwd": "${workspaceFolder}"
                    }
                }
            }]
        },
        {
            "name": "Example9 - python stdio check",
            "processes": [{
                "command": {
                    "call": [
                        "./stdioCheck.py"
                    ],
                    "extendedOptions": {
                        "cwd": "${workspaceFolder}"
                    }
                }
            }]
        },
        {
            "name": "Example10 - two parallel counts to 20 with delay",
            "processes": [
                {
                    "command": {
                        "call": [
                            "${workspaceFolder}/testCnt.sh",
                            "20",
                            "A"
                        ],
                        "delayProcess": 1000
                    }
                },
                {
                    "command": {
                        "call": [
                            "${workspaceFolder}/testCnt.sh",
                            "20",
                            "B"
                        ],
                        "delayProcess": 3000
                    }
                }
            ]
        }
    ]
}
